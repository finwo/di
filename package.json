{
  "name": "@finwo/di",
  "version": "0.0.1",
  "description": "Tiny typescript dependency injection library",
  "main": "./lib/cjs/index.js",
  "types": "./lib/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "scripts": {
    "test": "npm run build && node_modules/.bin/tap --reporter-arg=--reporter=html 'lib/test/**/*.test.js'",
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:test",
    "build:cjs": "tsc -p ./config/tsconfig.cjs.json",
    "build:esm": "tsc -p ./config/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:test": "tsc -p ./config/tsconfig.test.json"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE.md",
    "lib/cjs/",
    "lib/esm/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finwo/tiny-di.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/finwo/tiny-di/issues"
  },
  "homepage": "https://github.com/finwo/tiny-di#readme",
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/tap": "^15.0.7",
    "reflect-metadata": "^0.1.13",
    "tap": "^16.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
